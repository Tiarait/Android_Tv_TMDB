<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:lb="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.leanback.widget.HorizontalGridView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:lb="http://schemas.android.com/apk/res-auto"
            android:id="@+id/row_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            lb:rowHeight="wrap_content"
            style="?attr/rowHorizontalGridStyle" />
    <LinearLayout
        android:id="@+id/description"
        android:visibility="gone"
        android:layout_marginStart="@dimen/lb_browse_padding_start_low"
        android:layout_marginEnd="@dimen/lb_browse_padding_start"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/progress_reting"
            android:elevation="2dp"
            android:padding="3dp"
            android:gravity="center"
            android:background="@drawable/background_oval"
            android:layout_width="@dimen/details_rating_size"
            android:layout_height="@dimen/details_rating_size">
            <online.noxilab.tmdb.utils.CircleProgressBar
                android:id="@+id/progress_rating"
                lb:progressBarThickness="@dimen/details_rating_corner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <LinearLayout
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lb_details_description_subtitle_text_size">
                <TextView
                    android:id="@+id/progress_rating_text"
                    android:layout_marginTop="@dimen/details_rating_text_corel_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?attr/detailsDescriptionSubtitleStyle"/>
                <TextView
                    android:id="@+id/progress_rating_text_proc"
                    android:layout_marginTop="@dimen/details_rating_text_corel_top"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/details_rating_text_proc" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginStart="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/row_title"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/card_primary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/detailsDescriptionSubtitleStyle"
                />
            <TextView
                android:id="@+id/row_subtitle"
                android:layout_marginBottom="@dimen/lb_action_icon_margin"
                android:padding="5dp"
                android:gravity="top"
                android:lines="2"
                android:textColor="@color/card_secondary_text"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/detailsDescriptionBodyStyle"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>